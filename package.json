{
  "name": "extra-promise",
  "version": "0.3.0",
  "description": "Utilities for using Promise and Async/Await in JavaScript",
  "main": "lib/extra-promise.js",
  "module": "src/extra-promise.ts",
  "repository": "git@github.com:BlackGlory/extra-promise.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "precommit": "yarn test && npm run doc",
    "prepush": "yarn test",
    "test": "jest --coverage",
    "build": "tsc --outDir lib",
    "doc": "typedoc --mode modules --out doc src/extra-promise.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.1.4",
    "coveralls": "^3.0.0",
    "documentation": "^5.3.5",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "typedoc": "^0.10.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {}
}

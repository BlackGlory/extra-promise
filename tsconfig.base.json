{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "CommonJS"
  , "strict": true
  , "esModuleInterop": true
  , "noUnusedLocals": true
  , "noUnusedParameters": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@utils/*": ["src/utils/*"]
    , "@errors": ["src/utils/errors"]
    , "@functions/*": ["src/functions/*"]
    , "@classes/*": ["src/classes/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}

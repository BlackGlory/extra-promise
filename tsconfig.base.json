{
  "compilerOptions": {
    "target": "ES2019"
  , "module": "CommonJS"
  , "lib": ["DOM", "ES2019.Object"]
  , "strict": true
  , "esModuleInterop": true
  , "noUnusedLocals": true
  , "noUnusedParameters": true
  , "experimentalDecorators": true
  , "emitDecoratorMetadata": false
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@utils/*": ["src/utils/*"]
    , "@errors": ["src/utils/errors"]
    , "@functions/*": ["src/functions/*"]
    , "@classes/*": ["src/classes/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
